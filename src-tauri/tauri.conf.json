{
    "identifier": "com.synrlabs.growpanion",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:3000",
        "frontendDist": "../out"
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "GrowPanion",
                "width": 800,
                "label": "main",
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}